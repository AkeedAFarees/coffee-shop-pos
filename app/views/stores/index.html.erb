<!-- app/views/stores/index.html.erb -->
<h1>Stores</h1>

<%= link_to 'Create New Store', new_store_path, class: 'button' %>

<table class="store-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each_with_index do |store, index| %>
      <tr class="<%= 'even' if index.even? %>">
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
