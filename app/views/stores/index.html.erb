<!-- app/views/stores/index.html.erb -->
<h1>Stores</h1>

<div class="form-actions">
  <%= link_to 'New Store', new_store_path, class: 'button' %>
</div>

<table class="store-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr class="store-row" data-href="<%= store_path(store) %>">
        <td><%= store.name %></td>
        <td><%= store.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  // JavaScript to make the entire row clickable
  document.querySelectorAll('.store-row').forEach(function(row) {
    row.addEventListener('click', function() {
      window.location = row.getAttribute('data-href');
    });
  });
</script>